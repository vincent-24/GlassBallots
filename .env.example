# ============================================
# GLASSBALLOTS PLATFORM - ENVIRONMENT CONFIG
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# SERVICE PORTS
# ============================================
FRONTEND_PORT=3000
API_PORT=3001
AI_SERVICE_PORT=5001

# ============================================
# AI SERVICE CONFIGURATION
# ============================================
# OpenAI API Key for proposal analysis
OPENAI_API_KEY=your_openai_api_key_here

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
# Blockchain RPC URL (Hardhat local, Sepolia testnet, or Polygon mainnet)
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545

# Ballot contract address (set after deployment)
# Run `npm run deploy` in blockchain-service and copy the deployed address here
BALLOT_CONTRACT_ADDRESS=

# Private key for deploying contracts (DO NOT COMMIT REAL KEYS)
# This is the default Hardhat account #0 for LOCAL DEVELOPMENT ONLY
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Network to deploy to (hardhatMainnet, hardhatOp, sepolia, polygon)
BLOCKCHAIN_NETWORK=hardhatMainnet

# Transaction confirmations to wait for before considering tx final
TX_CONFIRMATIONS=1

# Transaction timeout in milliseconds
TX_TIMEOUT=60000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Path to SQLite database file (relative to project root)
DATABASE_PATH=./blockchain-service/database/glassballots.db

# Database encryption key (32-byte hex string)
# GENERATE A NEW ONE: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT Secret for session tokens
# GENERATE A NEW ONE: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# Session expiry (in seconds) - default 7 days
SESSION_EXPIRY=604800

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# DEVELOPMENT / PRODUCTION
# ============================================
# Environment mode
NODE_ENV=development

# Enable debug logging
DEBUG=true

# ============================================
# OPTIONAL: IPFS CONFIGURATION
# ============================================
# For decentralized storage of proposals
# IPFS_API_URL=http://127.0.0.1:5001
# IPFS_GATEWAY_URL=http://127.0.0.1:8080
